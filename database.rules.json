{
  "rules": {
    "flamelink": {
      ".read": "true",
      ".write": "auth != null",
      "environments": { "production": {"content":{
        "courses":{"en-US": {
        	".indexOn": "slug"
      	}},
        "lessons":{"en-US": {
          ".indexOn": "status"
        }}
      }}}
    },
    "accounts": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      },
      ".indexOn": "email"
    },
    "inquiries": {
      "$uid": {
        ".write": "true"
      }
    },
    "team-request": {
      "$uid": {
        ".write": "true"
      }
    }
  }
}
