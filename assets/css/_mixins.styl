// Media Queries
//
// Device type breakpoints for readability
mobile-only()
  @media screen and (max-width: 39.9375em)
    {block}
tablet-up()
  @media screen and (min-width: 40em)
    {block}
laptop-up()
  @media screen and (min-width: 64em)
    {block}
laptop-down()
  @media screen and (max-width: 63.9375em)
    {block}
desktop-up()
  @media screen and (min-width: 82em)
    {block}
// Reconsider; doesn't work well.
desktop-only()
  @media screen and (min-width: 64em) and (max-width: 74.9375em)
    {block}

// Grid Area Builder
//
// Creates classes and grid-area names for containers
build-grid-area(list)
  for $i in list
    .{$i}
      grid-area $i
