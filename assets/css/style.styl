// General Styles
@import _variables
@import _typography

// Elements
@import _buttons
@import _forms
@import _cards
@import _media-block
@import _modals
@import _transitions

*
  box-sizing: border-box

a
  text-decoration none
  color $black
  &:visited
    $black
  &.-inverted
    color #fff

ul
  list-style-type none
  padding 0
  margin 0

img
  width: 100%

.visually-hidden
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

[v-cloak] > *
  display none

[v-cloak]::before
  content: "loadingâ€¦"

.truncate
  overflow: hidden
  text-overflow: ellipsis
  display: -webkit-box
  -webkit-line-clamp: 1
  -webkit-box-orient: vertical

.banner
  display grid
  padding-left 4%
  padding-right 4%
  background-size: cover
  background-position: center center

.section
  padding ($vertical-space/2) 4%
