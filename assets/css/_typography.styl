html
  text-rendering: optimizeLegibility
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
body
  font-family $font-family-base
  font-size 14px
h1,.h1,
h2,.h2,
h3,.h3,
h4,.h4,
h5,.h5,
h6,.h6
  font-family $font-family-base
  font-weight  700
  margin-top 0
  margin-bottom 0.3em
h1,.h1
  font-size 32px
h2,.h2
  font-size 28px
h3,.h3
  font-size 20px
h4,.h4
  font-size 18px
h5,.h5
  font-size 12px
p
  line-height: 1.5

+tablet-up()
  body
    font-size $font-size-base
  h1,.h1
    font-size 4em
    // font-size 56px
  h2,.h2
    font-size 3em
    // font-size 40.5px
  h3,.h3
    font-size 2em
    // font-size 27px
  h4,.h4
    font-size 1.5em
    // font-size 18px
  h5,.h5
    font-size 1.25em
    // font-size 12px
  h6,.h6
    font-size 1em
    // font-size 12px
  p
    line-height: 1.5
